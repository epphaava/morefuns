<!DOCTYPE html>
<html lang="en">
<link rel="stylesheet" href="styles.css">

<!-- add header from partials -->
<%- include('./partials/head.ejs') %>

    <body>

        <!-- add navbar from partials -->
        <%- include('./partials/nav.ejs') %>

            <div class="index-content">


                <% if(posts.length> 0) { %>
                    <% posts.reverse().forEach(post=> { %>

                        <div class="post">

                            <a href="/singlepost/<%=post.id%>">

                                <div class=post_header>

                                    <div class="user">
                                        <div class=icon>
                                            <img src=<%=post.profile_pic_src %> alt="ProfilePic">
                                        </div>
                                        <div class="name">
                                            <%= post.usr %>
                                        </div>
                                    </div>
                                    <div class="date">
                                        <small>
                                            <%= post.date %>
                                        </small>
                                    </div>
                                </div>
                            </a>

                            <div class="post_image">
                                <img src=<%=post.post_pic_src %> alt="PostPic">
                            </div>
                            <div class="post_title">
                                <%= post.post_title %>
                            </div>
                            <div class=thumb>
                                <input id="likebtn" type="image" src="https://i.ibb.co/S3M17RH/thumbsup-vol4.png" alt="Thumbs up">
                                <p class="likes">
                                    <%= post.likes %>
                                </p>
                            </div>

                        </div>
                        <% }) %>
                            <% } else { %>
                                <div class="not-found-content">
                                    <h2>
                                        You have not posted anything yet!
                                    </h2>
                                </div>
                                <% } %>

            </div>

            <!-- add footer from partials -->
            <%- include('./partials/footer.ejs') %>

                <script>

                    document.getElementById('likebtn').addEventListener('click', likedFunction)
                    function likedFunction() {
                        console.log('click');
                    }

                </script>

    </body>

</html>